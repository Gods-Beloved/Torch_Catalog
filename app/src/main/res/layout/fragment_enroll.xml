<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#7ADDDADA"
    android:layout_height="match_parent"
    tools:context=".Enroll">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/v_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
         />



    <androidx.core.widget.NestedScrollView
        android:id="@+id/v_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="true"
        app:layout_anchor="@+id/v_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/v_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardElevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:gravity="center"
                    android:id="@+id/v_down_btn"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/v_lecturer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lecture_image"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black"

                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="Lecturer Name"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/v_lecturer_position"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_below="@id/v_lecturer_name"
                        android:text="Office"
                        android:textColor="@color/black"

                        android:fontFamily="@font/allerta_stencil"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/v_lecturer_department"
                        android:layout_margin="8dp"
                        android:layout_below="@id/v_lecturer_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dept:"
                        android:textColor="@color/black"

                        android:fontFamily="sans-serif-condensed"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/v_lecturer_interest"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@id/v_lecturer_department"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Interest"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="18sp"
                        />



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/lecture_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/baseline_person_black_24dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                </RelativeLayout>




            </androidx.cardview.widget.CardView>



        </com.facebook.shimmer.ShimmerFrameLayout>







    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>